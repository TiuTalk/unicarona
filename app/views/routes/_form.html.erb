<%= simple_form_for(@route, html: { class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :origin, input_html: { data: { autocomplete: :address } } %>
    <%= f.input :destination, input_html: { data: { autocomplete: :address } } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
