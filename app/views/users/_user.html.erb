<% given = user.rides_given.completed.count %>
<% taken = user.rides_taken.completed.count %>

<div class="card" data-user-id="<%= user.id %>">
  <div class="card-block">
    <h4 class="card-title"><%= user.name %></h4>
    <p class="card-text">
      <%= fa_icon('thumbs-up') %> <%= t(:rides_given_html, count: given) %> e <%= t(:rides_taken_html, count: taken).downcase.html_safe %><br />
      <%= fa_icon('calendar-o') %> Usu√°rio(a) desde <%= l(user.created_at.to_date, format: :short) %><br />
    </p>
  </div>
</div>
