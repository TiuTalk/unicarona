<% ride_given = ride.driver_id == current_user.id %>
<div class="list-group-item list-group-item-action flex-column align-items-start" data-ride-id="<%= ride.id %>">
  <div class="d-flex w-100 justify-content-between">
    <%= content_tag(:h5, ride_given ? ride.passenger.name : ride.driver.name, class: 'mb-1') %>
    <small class="text-right"><%= ride_status_badge(ride) %></small>
  </div>

  <p class="mb-1">
    <%= fa_icon('map-marker', text: ride.route.origin) %><br />
    <%= fa_icon('location-arrow', text: ride.route.destination) %>
  </p>

  <small>Pedido <%= content_tag(:b, time_ago_in_words(ride.created_at)) %> atr√°s</small>

  <div class="btn-group mt-2" role="group" aria-label="Basic example">
    <% if ride_given %>
      <%= link_to(fa_icon('thumbs-up', text: 'Aceitar'), '#', class: 'btn btn-success') if ride.may_accept? %>
      <%= link_to(fa_icon('thumbs-down', text: 'Recusar'), '#', class: 'btn btn-danger') if ride.may_reject? %>
      <%= link_to(fa_icon('user lg'), '#', class: 'btn btn-info') unless ride.completed? || ride.canceled? %>
      <%= link_to(fa_icon('whatsapp lg'), ride.passenger.whatsapp_url, class: 'btn btn-success') unless ride.completed? || ride.canceled? %>
    <% else %>
      <%= link_to(fa_icon('ban', text: 'Cancelar'), '#', class: 'btn btn-danger') if ride.may_cancel? %>
      <%= link_to(fa_icon('user lg'), '#', class: 'btn btn-info') unless ride.completed? || ride.canceled? %>
      <%= link_to(fa_icon('whatsapp lg'), ride.driver.whatsapp_url, class: 'btn btn-success') unless ride.completed? || ride.canceled? %>
    <% end %>
  </div>
</div>
